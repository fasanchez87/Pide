<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:clickable="true"
    android:longClickable="true"
    style="@android:style/Widget.ActionButton">

    <ImageView
        android:id="@+id/imagen_carro_compra"
        android:src="@drawable/ic_carrito_compra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="0dp"
        android:contentDescription="bell"
        />

    <TextView
        android:id="@+id/contadorCarrito"
        android:layout_width="20dp"
        android:minWidth="12sp"
        android:textSize="12sp"
        android:textColor="#ffffffff"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="15"
        android:layout_alignTop="@id/imagen_carro_compra"
        android:layout_alignRight="@id/imagen_carro_compra"
        android:layout_marginRight="-4.2dp"
        android:layout_marginTop="-14dp"
        android:paddingBottom="1dp"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:paddingTop="1dp"
        android:background="@drawable/rounded_square"/>
</RelativeLayout>
